<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- כותרת -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="בחר שותף להתנהלות:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp" />

        <!-- שותף 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/yisca"
            android:clickable="true"
            android:onClick="onPartnerClick">

            <ImageView
                android:id="@+id/imagePartner1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/yisca"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/namePartner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alice"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- שותף 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/yisca"
            android:clickable="true"
            android:onClick="onPartnerClick">

            <ImageView
                android:id="@+id/imagePartner2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/yisca"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/namePartner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bob"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- הוספת שותפים נוספים -->
        <!-- העתקי את המבנה הזה לכל שותף נוסף -->
    </LinearLayout>
</ScrollView>
